<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/citiesLv"
        android:choiceMode="singleChoice"
        android:background="@color/citiesListViewBackground"
        android:visibility="invisible"/>

    <TextView
        android:visibility="visible"
        android:id="@+id/connectionErrorTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/connection_error_tv_margin_top"
        android:text="@string/error_dialog_null_response"
        android:textColor="@color/emptyListTextColor"/>
</RelativeLayout>